<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="7dp"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/movieDirector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/movieTitle"
            android:text=""
            android:textSize="10sp" />

        <Button
            android:id="@+id/expandable_toggle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_alignParentRight="true"            
            android:background="@android:color/holo_orange_light"
            android:text="info"
            android:textSize="20sp" />
    </RelativeLayout>

   <LinearLayout
        android:id="@+id/expandable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listviewbackground"
        android:orientation="vertical" >
        
         <TextView
            android:id="@+id/objectName"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="7dp"
            android:text="Sourcio CJSC"
            android:textSize="15sp"
            android:textColor="#fff"
             />
         
          <TextView
            android:id="@+id/objectAddress"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Alek Manukyan Ave. 15"
            android:textSize="15sp" 
            android:textColor="#fff"
            />
          
          <TextView
            android:id="@+id/objectDistance"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="2.4km"
            android:textSize="15sp"
            android:textColor="#fff"
             />
          
          <TextView
            android:id="@+id/objectMail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="arshak92@list.ru"
            android:textSize="15sp" 
            android:textColor="#fff"
            />
          
           <TextView
            android:id="@+id/objectTel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="+37493769774"
            android:textSize="15sp" 
            android:textColor="#fff"
            />
          
    </LinearLayout>

</LinearLayout>